@import './lib';

.select__control
  border 0
  border-radius 0
  cursor pointer
  min-height 26px
  font-family $workssans

.select__indicator
  height 26px

.select__indicator-separator
  display none

.select__menu
  margin-top 18px
  padding 0px
  border 1px solid #6439AB
  border-radius 10px
  background $bggrey
  font-family $workssans
  font-size 18px !important
  overflow hidden

.select__menu-list
  padding-top 0px
  padding-bottom 0px

.select__control
  background $bgalphadark

.select__option
  height 51px
  padding 16px 20px

.select__placeholder,
.select__menu
  color #FFF

.select__single-value
  color $primary

.select__control--is-focused
  box-shadow none !important
  background $bgdark

.select__option
  cursor pointer

.select__clear-indicator
  display none

.select__label
  font-size 11px

.select__option--is-focused
  background $black

.select__menu .select__option--is-selected
  background $black

.select__value-container
  height 26px
  position static
  padding 2px 8px
  &.select__value-container--is-multi
    height auto
    padding 6px

.select__dropdown-indicator
  padding 3px 8px
  background-image url("/assets/arrow_down.svg")
  background-repeat no-repeat
  background-position center
  width 12px

.select__dropdown-indicator:active
  background-image url("/assets/arrow_up.svg")

.select__dropdown-indicator svg
  display none  

.select__multi-value
  background $bg
  color $primary

.select__multi-value__label
  color $primary

.select__value-container--is-multi > :last-child
  display none

.select__multi-value__remove:hover
  color #fff
  background $bg
