@import './lib';

.select__control
  border 0
  border-radius 0
  cursor pointer
  min-height 26px

.select__indicator
  height 26px

.select__indicator-separator
  display none

.select__control,
.select__menu
  background $black

.select__placeholder,
.select__menu,
.select__single-value
  color $white

.select__option
  cursor pointer

.select__clear-indicator
  display none

.select__label
  font-size 11px

.select__option--is-focused
  background $gray

.select__value-container
  height 26px
  position static
  &.select__value-container--is-multi
    height auto

.select__dropdown-indicator
  padding 3px 8px

.select__multi-value
  background $gray
  color $white

.select__multi-value__label
  color $white

.select__value-container--is-multi > :last-child
  display none
