@import './lib';

#toolbar
  position fixed
  top 36px
  right 40px
  height 43px
  width 188px

  .toolbarActions
    width 188px
    height 43px
    display flex
    justify-content space-between

    a.disabled
      color #666
      cursor default

    .fa
      display none

#scenegraph
  display flex
  flex-direction column
  overflow auto
  padding-top 32px
  width auto

  .layer 
    width 340px
    margin-top 20px
    background #4b4b4b
    border-radius 12px
    display flex
    flex-direction column
    align-items center

  .layer.active
    background $layerActive

  .entity.option
    display flex
    flex-direction column
    width 340px   
    flex none
    order 1
    flex-grow 0
    padding 16px 24px 16px 16px
    box-sizing border-box

    > span
      display flex
      justify-content flex-start
      align-items center
      flex-direction row
      position relative

      .entityPrint
        flex-basis 237px
        margin-left 15px

  .entity:first-child
    margin 0px !important

  .entity:last-child
      margin-bottom 8px

  .entity
    cursor pointer
    display flex
    justify-content space-between
    padding 3px
    width 100%
    white-space nowrap

    &.active
      width 324px
      margin 0 8px
      height 52px
      background $layerActive
      border-radius 10px
      color #fff
      padding 16px 16px 16px 8px
      .component:hover
        color #1888c1
      .entityActions
        display inline

    &.active:last-child
      margin-bottom 8px

    &.active.novisible:first-child ~ .entity .entityName,
    &.novisible:first-child ~ .entity .entityName
      color #999

    &.novisible
      &.active
        span,
        .id
          color #999

      &:not(.active)
        span,
        .id
          color #999

  .component:hover
    color #1faaf2

  .entityIcons
    display none
    margin-left 2px

  .entityActions
    display none
    margin 0 14px

    .button
      color #fff
      font-size 12px
      margin-left 6px

  .fa
    color #CCC

  .fa-trash,
  .fa-clone
    display none

  .entityActions .fa:hover
    color $primary

  .active .fa
    color #FAFAFA

  .id
    color #ccc

  .option.active .id
    color #fff

  .collapsespace
    color #eee !important
    display inline-block
    text-align center
    width 14px
    right 0px
    position absolute

  .fa-eye,
  .fa-eye-slash
    color #bbb
    background-repeat no-repeat
    background-size contain
    background-position center 
    width 15px
    height 15px

  .fa-eye      
    background-image url("data:image/svg+xml;base64,")

  .fa-eye:before,
  .fa-eye-slash:before
    content none

  .fa-eye-slash
    background-image url("data:image/svg+xml;base64,") !important

  .icons a.button
    color #fff

  .search
    display none
    padding 5px
    font-size 16px
    position relative

    input
      color $white
      background $bgdark
      border-radius 5px
      height 22px
      text-indent 10px
      width 216px

    .fa-search
      position absolute
      right 14px
      top 8px

    .fa-times
      position absolute
      right 15px
      top 9px

  .outliner
    color $white
    cursor default
    flex 1 1 auto
    font-size 16px
    outline none
    overflow-y auto
    overflow-x hidden
    position absolute
    top 80px
    width 372px
    height 584px
    display flex
    flex-direction column
    align-items center
    padding 0px
    background #373737
    border-radius 0px 12px 12px 0px

    #layers-title
      width 372px
      background #373737
      display flex
      flex-direction row
      justify-content flex-start
      align-items center
      align-self start

      #toggle-leftbar
        width 56px
        height 72px
        background #323232 
        background-image url("data:image/svg+xml;base64,")
        background-repeat no-repeat
        background-position center 
        cursor pointer 
        
      #toggle-leftbar:hover
        background-color $buttonHover

      #toggle-leftbar:active
        background-color $buttonPressed

      span
        font-weight 500
        font-size 24px
        color #FFF
        line-height 28px
        background url("data:image/svg+xml;base64,")
        background-repeat no-repeat
        background-position left
        padding-left 36px
        margin-left 20px

  .outliner.hide,
  .outliner.hide #layers-title
    width 56px
    height 72px

  .outliner.hide:hover,
  .outliner.hide #layers-title:hover
    width 115px
    background-color $buttonHover
    cursor pointer

  .outliner.hide #layers-title span
    display none

  .outliner.hide #layers-title:active
    background-color $buttonPressed    

    span
      display block
      font-size 18px
      color $colorPressed
      background-position left
      background-image url($iconLayersActive) !important

  .outliner.hide #layers-title:hover span
    display block
    font-size 18px
    margin-left 12px
    padding-left 40px
    line-height 29px
    background-image url($iconLayers)

  .outliner.hide #layers-title:hover #toggle-leftbar
    display none

  .outliner.hide #toggle-leftbar
    background rgba(50, 50, 50, 0.5) !important
    backdrop-filter blur(24px)
    background-image url($iconLayers) !important
    background-repeat no-repeat !important
    background-position center !important

  .outliner.hide #toggle-leftbar:active
    background-color $buttonPressed !important

  .outliner.hide .entity,
  .outliner.hide .layer
    display none

.scenegraph-bottom
  background-color #323232
  border-top 1px solid #111
  bottom 10
  height 40px
  left 0
  z-index 100

  a
    float right
    margin 10px
