@import './lib';

#toolbar
  position fixed
  top 36px
  right 40px
  height 43px
  width 188px

  .toolbarActions
    width 188px
    height 43px
    display flex
    justify-content space-between

    a.disabled
      color #666
      cursor default

#scenegraph
  display flex
  flex-direction column
  overflow auto
  padding-top 32px
  width auto

  .layer 
    width 340px
    margin-top 20px
    background #4b4b4b
    border-radius 12px
    display flex
    flex-direction column
    align-items center

  .layer.active
    background #8941FF

  .entity.option
    display flex
    flex-direction column
    width 340px   
    flex none
    order 1
    flex-grow 0
    padding 16px 24px 16px 16px
    box-sizing border-box

    > span
      display flex
      justify-content flex-start
      align-items center
      flex-direction row
      position relative

      .entityPrint
        flex-basis 237px
        margin-left 15px

  .entity:first-child
    margin 0px !important

  .entity:last-child
      margin-bottom 8px

  .entity
    background $bg
    cursor pointer
    display flex
    justify-content space-between
    padding 3px
    width 100%
    white-space nowrap

    &:hover
      background #1d2f39

    &.active
      background-color #155373
      color #fff
      .component:hover
        color #1888c1
      .entityActions
        display inline

    &.novisible
      &.active
        span,
        .fa,
        .collapsespace,
        .id
          color #999

      &:not(.active)
        span,
        .fa,
        .collapsespace,
        .id
          color #626262

  .component:hover
    color #1faaf2

  .entityIcons
    margin-left 2px

  .entityActions
    display none
    margin 0 14px

    .button
      color #fff
      font-size 12px
      margin-left 6px

  .fa
    display none
    color #CCC

  .entityActions .fa:hover
    color $primary

  .active .fa
    color #FAFAFA

  .id
    color #ccc

  .option.active .id
    color #fff

  .collapsespace
    color #eee
    display inline-block
    text-align center
    width 14px

  .fa-eye
    color #bbb

  .icons a.button
    color #fff

  .search
    display none
    padding 5px
    font-size 16px
    position relative

    input
      color $white
      background $bgdark
      border-radius 5px
      height 22px
      text-indent 10px
      width 216px

    .fa-search
      position absolute
      right 14px
      top 8px

    .fa-times
      position absolute
      right 15px
      top 9px

  .outliner
    display none
    background $bg
    color $white
    cursor default
    flex 1 1 auto
    font-size 13px
    height calc(100% - 98px)
    outline none
    overflow-y auto
    padding 0
    width 230px

.scenegraph-bottom
  background-color #323232
  border-top 1px solid #111
  bottom 10
  height 40px
  left 0
  z-index 100

  a
    float right
    margin 10px
