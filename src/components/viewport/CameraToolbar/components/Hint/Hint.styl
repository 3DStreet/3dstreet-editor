.wrapper  
    position absolute
    top 50px
    width fit-content
    min-width 100px
    max-width 245px
    display flex
    visibility hidden
    opacity 0
    justify-content flex-start
    align-items flex-start
    transition all 0.3s
    background-color rgba(55, 55, 55, 0.8)
    padding 6px 8px
    border-radius 8px

    span
        position relative
        display flex
        width 100%
        font-size 12px
        line-height 14.4px
        font-weight 500
        color #ffffff
    
    span::before
        position absolute
        top -12px
        left calc(50% - 3px)
        display block
        content ''
        width 12px 
        height 6px
        background-color rgba(55, 55, 55, 0.8)
        clip-path polygon(50% 0%, 0% 100%, 100% 100%)
