.essentialActionsWrapper
    display: flex
    flex-direction: column
    row-gap: 2.75rem
    width: calc(100% - 208px)
    padding: 78px 104px 

    .row 
        display: grid
        grid-template-columns: 50% 50%
        column-gap: 3.75rem
        width: 100%

        h3, p 
            margin 0 !important

        .text 
            display: flex
            flex-direction: column
            row-gap: 0.4375rem
            width: 100%

            h3.actionTitle 
                font-size: 1.25rem
                line-height 1.5rem
                font-weight: 400

            p.actionDescription
                font-size: 1rem
                line-height 1.2rem
                font-weight: 400

        .icons
            display: flex
            flex-direction: column
            row-gap: 1.25rem
            width: 100%

            .itemsRow
                display: flex
                column-gap: 0.75rem
                align-items: center
                width: 100%

                span
                    font-size: 1rem
                    line-height 1.2rem
                    font-weight: 400