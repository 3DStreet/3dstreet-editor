.close:hover {
  border-radius: 50%;
  cursor: pointer;
  background-color: rgba(50, 50, 50, 0.6);
  transition: all 0.3s;
}

.close:active {
  background-color: #282828;

  span {
    background-color: #B6B6B6;
  }
}

.input {
  width: 262px;
  height: 36px;
}

.title {
  font-size: 20px;
  margin-top: 26px;
  margin-bottom: 0px;
  position: relative;
}

.header {
  display: flex;
  justify-content: space-between;
  margin: 24px 0px 0px 0px;
}

.buttons {
  display: flex;
  column-gap: 16px;
}