#zoomButtons.wrapper 
    position absolute
    z-index: 1
    top: unset
    right 32px
    bottom 74px
    display: block
    min-width: unset
    width: 3rem
    height: 6rem
    overflow: hidden
    border-radius: 32px
    margin: 0
    padding: 0
    opacity: 1
    visibility: visible

    .btn
        display: block
        width: 100%
        height: 50%
        padding: 0
        margin: 0
        background-color: #2d2d2d
        outline: unset
        border: unset
        border-radius: unset
        color: #fff
        transition: all 0.3s
        
    .plus-button
        background-image: url('data:image/svg+xml;base64, ')
        background-repeat: no-repeat
        background-position: bottom 8px center

    .minus-button
        background-image: url('data:image/svg+xml;base64, ')
        background-repeat: no-repeat
        background-position: top 8px center

    .btn:hover
        background-color: #6439df

    .btn:active 
        background-color: #5b37c0

