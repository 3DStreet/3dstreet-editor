.buttonWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    column-gap: 12px;
    width: fit-content;
    padding: 11px 15px !important; 
    border-radius: 18px;
    border: 1px solid transparent;
    outline: unset;
    background-color: transparent;
    font-size: 16px !important;
    line-height: 19px;
    font-weight: 500;
    transition: all 0.3s;
}

.buttonWrapper svg path {
    transition: all 0.3s;
}

.buttonWrapper:focus {
    outline: unset;
}

.buttonWrapper:hover {
    cursor: pointer;
}

.buttonWrapper:disabled {
    cursor: not-allowed;
}

.filledButton {
    background-color: #774DEE;
    color: #fff;
}

.filledButton:hover {
    background-color: #6439DF;
    transition: all 0.3s;
}

.filledButton:active {
    background-color: #5B37C0;
    color: #B6B6B6
    transition: all 0.3s;
}

.filledButton:disabled {
    background-color: rgba(237, 235, 239, 0.5);
    color: rgba(50, 50, 50, 0.4);
    transition: all 0.3s;
}

.outlinedButton {
    background-color: transparent;
    color: #774DEE;
    border-color: #774DEE;
}

.outlinedButton:hover {
    color: #6439DF;
    border-color: #6439DF;
    transition: all 0.3s;
}

.outlinedButton:active {
    color: #5B37C0;
    border-color: #5B37C0;
    transition: all 0.3s;
}

.outlinedButton:disabled {
    color: rgba(237, 235, 239, 0.5);
    border-color: rgba(237, 235, 239, 0.5);
    transition: all 0.3s;
}

.ghostButton {
    color: #774DEE;
}

.ghostButton:hover {
    color: #6439DF;
    transition: all 0.3s;
}

.ghostButton:active {
    color: #5B37C0;
    transition: all 0.3s;
}

.ghostButton:disabled {
    color:  rgba(237, 235, 239, 0.5);
    transition: all 0.3s;
}

.toolButton {
    background-color: rgba(50, 50, 50, 0.8);
    color: #ffffff
    width: 166px
}

.toolButton:hover {
    background-color: #262626;
    transition: all 0.3s;
}

.toolButton:active {
    background-color: #1E1E1E;
    color: #B6B6B6;
    transition: all 0.3s;
}

.tooltipButton:disabled {
    background-color: rgba(50, 50, 50, 0.6);
    color: #636363;
    transition: all 0.3s;
}